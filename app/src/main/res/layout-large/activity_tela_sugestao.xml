<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/bgCinzaInterno"
    android:background="#FFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".TelaSugestao" >

    <TextView
        android:id="@+id/TextCont"
        style="@style/labelTituloTela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/lbl_sugestao_title"
        android:textColor="#000"
        android:textSize="40dp" />

    <Button
        android:id="@+id/btnEnviarRespostas"
        style="@style/botaoAmareloFontePreta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/editText1"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/textView2"
        android:height="80dp"
        android:onClick="avancar"
        android:text="@string/btnAvancar2"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editText1"
        style="@style/caixaTextoBranca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnEnviarRespostas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextCont"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:textSize="28dp" />

    <Button
        android:id="@+id/btnVoltar2"
        style="@style/botaoAmareloFontePreta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnEnviarRespostas"
        android:layout_alignBottom="@+id/btnEnviarRespostas"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/textView2"
        android:height="80dp"
        android:onClick="voltar"
        android:text="@string/btnVoltar2"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnEnviarRespostas"
        android:layout_alignTop="@+id/btnEnviarRespostas"
        android:layout_centerHorizontal="true"
        android:background="#FFF"
        android:minWidth="5dp"
        android:text="@string/label_linha"
        android:width="5dp" />

</RelativeLayout>
